{
	"$schema": "http://json-schema.org/draft-07/schema",
	"type": "object",
	"properties": {
		"TaskDetails": {
			"$ref": "#/definitions/TaskDetails"
		}
	},
	"required": ["TaskDetails"],
	"title": "TaskDetails",
	"definitions": {
		"TaskDetails": {
			"$id": "#/properties/TaskDetails",
			"type": "object",
			"title": "Task Details schema",
			"required": ["needDeliverableId", "dueDate", "taskType"],
			"properties": {
				"needDeliverableId": { "type": "string" },
				"taskType": { "type": "string" },
				"startDate": { "type": "string", "format": "date-time" },
				"dueDate": { "type": "string", "format": "date-time" },
				"priority": { "type": "integer" },
				"taskDetailUrl": { "type": "string" },
				"status": { 
					"type": "string",
					"enum": ["Not Started", "In Progress", "In Review", "Approved", "Rejected"]
				},
				"submitTaskDetails": {
					"type": "object",
					"properties": {
						"submittedDate": { "type": "string", "format": "date-time" },
						"url": { "type": "string" },
						"remarks": { "type": "string" }
					},
					"required": ["submittedDate", "url"]
				},
				"comments": { "type": "string" }
			}
		}
	},
	"_osConfig": {
		"systemFields": ["osCreatedAt", "osUpdatedAt", "osCreatedBy", "osUpdatedBy"]
	}
}
