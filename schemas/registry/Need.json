{
	"$schema": "http://json-schema.org/draft-07/schema",
	"type": "object",
	"properties": {
		"Need": {
			"$ref": "#/definitions/Need"
		}
	},
	"required": ["Need"],
	"title": "Need",
	"definitions": {
		"Need": {
			"$id": "#/properties/Need",
			"type": "object",
			"title": "Need schema",
			"required": ["name", "needTypeId", "userId"],
			"properties": {
				"name": { "type": "string" },
				"needTypeId": { "type": "string" },
				"status": { 
                                           "type": "string" ,
                                           "enum": ["New",
                                                    "Approved",
                                                    "Rejected",
						    "Nominated",
						    "In Progress",
						    "Closed",
						    "Inactive"]},
                                "description": { "type": "string" },
				"userId":  {"type": "string" },
				"entityId": {"type": "string" },
				"requirementId":{"type":"string" },
				"taxonomyDetails": {"$ref": "#/definitions/TaxonomyDetails"}
			}
		},
		 "TaxonomyDetails": {
        		"title": "Details of the Taxonomy",
        		"type": "object",
        		"required": ["taxonomy"],
        		"properties": {
          			"id": {"type": "string"},
                                 "taxonomy": { 
                                          "type": "object",
                                          "additionalProperties": {
                                                 "type": "string"
                                            }
				   }
        			}
     		 }
	},
	"_osConfig": {
		"ownershipAttributes": [
			{
				"email": "/email",
				"mobile": "/phoneNumber",
				"needId": "/phoneNumber"
			}
		],
		"systemFields": [
     			 "osCreatedAt",
      			"osUpdatedAt",
      			"osCreatedBy",
     			 "osUpdatedBy"
    		],
		"inviteRoles": ["nCoordinator"]
	}
}
